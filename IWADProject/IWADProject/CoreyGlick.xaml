<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IWADProject.CoreyGlick">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="Gray">
                <Label Text="Corey Glick"
                   FontSize="30"
                   FontAttributes="Bold"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <Image x:Name="coreyG1" Aspect="AspectFit" />

                <Label FontSize="25" Text="Born in 1993"/>
                <Label FontSize="25" Text="From Long Beach, CA"/>

                <Image x:Name="coreyG2" Aspect="AspectFit" />

                <Image x:Name="deck" Aspect="AspectFit" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>