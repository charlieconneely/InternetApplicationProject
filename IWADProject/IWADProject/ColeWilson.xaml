<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IWADProject.ColeWilson">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="Black">
                
                <Label Text="Cole Wilson"
                       FontSize="30"
                       FontAttributes="Bold"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" 
                       TextColor="White"/>
                <Image x:Name="coleW1" Aspect="AspectFit" />

                <Label FontSize="25" Text="Born in 1992" TextColor="White"/>
                <Label FontSize="25" Text="From Louisville, Kentucky" TextColor="White"/>

                <Image x:Name="coleW2" Aspect="AspectFit" />
                <Image x:Name="coleW3" Aspect="AspectFit" />

                <Label Text="Deck: " TextColor="White"/>

                <Image x:Name="deck" Aspect="AspectFit"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>