<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IWADProject.MadarsApse">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="Black">
                <Label Text="Madars Apse"
                   FontSize="30"
                   FontAttributes="Bold"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                 TextColor="White"/>
                <Image x:Name="madars1" Aspect="AspectFit" />

                <Label FontSize="25" Text="Born in 1990" TextColor="White"/>
                <Label FontSize="25" Text="Ventpils, Latvia" TextColor="White"/>

                <Image x:Name="madars2" Aspect="AspectFit" />
                <Image x:Name="madars3" Aspect="AspectFit" />

                <Image x:Name="deck" Aspect="AspectFit" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>