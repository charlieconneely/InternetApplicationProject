<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IWADProject.LouieBarletta">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="Pink">

                <Label Text="Louie Barletta"
                       FontSize="30"
                       FontAttributes="Bold"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" />
                <Image x:Name="lou1" Aspect="AspectFit" />

                <Label FontSize="25" Text="Born in 1983"/>
                <Label FontSize="25" Text="From San Francisco, USA"/>

                <Image x:Name="lou2" Aspect="AspectFit" />
                <Image x:Name="lou3" Aspect="AspectFit" />
                <Image x:Name="deck" Aspect="AspectFit"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>