<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IWADProject.BenRaemers">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="Pink">

                <Label Text="Ben Raemers"
                       FontSize="30"
                       FontAttributes="Bold"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" />
                <Image x:Name="p1" Aspect="AspectFit" />

                <Label FontSize="25" Text="Born in 1994"/>
                <Label FontSize="25" Text="From Walton on the Naze, Essex, GB"/>

                <Image x:Name="p2" Aspect="AspectFit" />
                <Image x:Name="p3" Aspect="AspectFit" />
                <Image x:Name="deck" Aspect="AspectFit"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>